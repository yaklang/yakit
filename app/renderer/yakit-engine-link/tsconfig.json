{
  "compilerOptions": {
    /* ✅ 基础设置 */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    /* ✅ 路径别名支持 */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* ✅ 类型安全 */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* ✅ 兼容性设置 */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  /* 引用子配置 */
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}